@model FinalSis457Jmfa.Models.Serie

@{
    ViewData["Title"] = "Detalle Serie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <h1>Detalle Serie</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Título</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Sinopsis)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Sinopsis)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Director)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Director)
                </dd>
                <dt class="col-sm-2">Duración</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Duracion)
                </dd>
                <dt class="col-sm-2">Fecha de Estreno</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaEstreno)
                </dd>
                <dt class="col-sm-2">Registro Activo</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RegistroActivo)
